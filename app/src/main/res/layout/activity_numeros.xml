<!--Activity numeros Creado Carlos Almaraz Escobar -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:background="@drawable/fondonum"
    android:orientation="vertical">

   <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="left"
        android:columnCount="3"
        android:orientation="horizontal"
        android:padding="0dp"
        android:rowCount="6">


       <Button
           android:id="@+id/btnuno"
           android:layout_width="120dp"
           android:layout_height="70dp"
           android:layout_margin="2dp"
           android:background="@drawable/btn1"
           android:textColor="#FAFAFA" />

       <Button
           android:id="@+id/btndos"
           android:layout_width="120dp"
           android:layout_height="70dp"
           android:layout_margin="2dp"
           android:background="@drawable/btn2"
           android:textColor="#FAFAFA" />

       <Button
           android:id="@+id/btntres"
           android:layout_width="120dp"
           android:layout_height="70dp"
           android:layout_margin="2dp"
           android:background="@drawable/btn3"
           android:textColor="#FAFAFA" />

       <Button
           android:id="@+id/btncuatro"
           android:layout_width="120dp"
           android:layout_height="70dp"
           android:layout_margin="2dp"
           android:background="@drawable/btn4"
           android:textColor="#FAFAFA" />

       <Button
           android:id="@+id/btncinco"
           android:layout_width="120dp"
           android:layout_height="70dp"
           android:layout_margin="2dp"
           android:background="@drawable/btn5"
           android:textColor="#FAFAFA" />

       <Button
           android:id="@+id/btnseis"
           android:layout_width="120dp"
           android:layout_height="70dp"
           android:layout_margin="2dp"
           android:background="@drawable/btn6"
           android:textColor="#FAFAFA" />

       <Button
           android:id="@+id/btnsiete"
           android:layout_width="120dp"
           android:layout_height="70dp"
           android:layout_margin="2dp"
           android:background="@drawable/btn7"
           android:textColor="#FAFAFA" />

       <Button
           android:id="@+id/btnocho"
           android:layout_width="120dp"
           android:layout_height="70dp"
           android:layout_margin="2dp"
           android:background="@drawable/btn8"
           android:textColor="#FAFAFA" />

       <Button
           android:id="@+id/btnnueve"
           android:layout_width="120dp"
           android:layout_height="70dp"
           android:layout_margin="2dp"
           android:background="@drawable/btn9"
           android:textColor="#FAFAFA" />

       <Button
           android:id="@+id/btndiez"
           android:layout_width="243dp"
           android:layout_height="76dp"
           android:layout_row="1"
           android:layout_columnSpan="3"
           android:layout_gravity="fill"
           android:layout_margin="2dp"
           android:background="@drawable/btn10"
           android:textColor="#FAFAFA" />

    </GridLayout>
    <!--Activity numeros Creado Carlos Almaraz Escobar -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="311dp"

        android:layout_gravity="center_vertical"

        />
</RelativeLayout>